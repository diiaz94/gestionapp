<h1>Lista de miembros</h1>

<table class="table">
  <thead>
    <tr>
      <th>Cedula</th>
      <th>Nombre</th>
      <th>Rol dentro de la comunidad</th>
      <th>Nombre de la comunidad</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @members.each do |member| %>
      <tr class="info">
        <td><%= member.profile.cedula %></td>
        <td><%= member.profile.primer_nombre+" "+member.profile.primer_apellido%></td>
        <td><%= member.job.nombre %></td>
        <td><%= member.comunity.nombre %></td>
        <td><%= link_to 'Mostrar', member %></td>
        <td><%= link_to 'Editar', edit_member_path(member) %></td>
        <td><%= link_to 'Eliminar', member, method: :delete, data: { confirm: 'Â¿Estas seguro/a?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

