<h1>Lista de municipios</h1>

<table class="table">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Estado</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @towns.each do |town| %>
      <tr class="info">
        <td><%= town.nombre %></td>
        <td><%= town.state.nombre %></td>
        <td><%= link_to 'Mostrar', town %></td>
        <td><%= link_to 'Editar', edit_town_path(town) %></td>
        <td><%= link_to 'Eliminar', town, method: :delete, data: { confirm: 'Â¿Estas seguro/a?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

