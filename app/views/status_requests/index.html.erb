<h1>Lista de estados de solicitudes</h1>

<table class="table">
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @status_requests.each do |status_request| %>
      <tr class="info">
        <td><%= status_request.nombre %></td>
        <td><%= link_to 'Mostrar', status_request %></td>
        <td><%= link_to 'Editar', edit_status_request_path(status_request) %></td>
        <td><%= link_to 'Eliminar', status_request, method: :delete, data: { confirm: 'Â¿Estas seguro/a?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

