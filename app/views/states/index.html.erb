<h1>Lista de estados</h1>

<table class="table">
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @states.each do |state| %>
      <tr class="info">
        <td><%= state.nombre %></td>
        <td><%= link_to 'Mostrar', state %></td>
        <td><%= link_to 'Editar', edit_state_path(state) %></td>
        <td><%= link_to 'Eliminar', state, method: :delete, data: { confirm: 'Â¿Estas seguro/a?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

