<div id="notice" class="alert alert-success hidden" role="alert">
  <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
  <span class="sr-only"></span>
  <%=notice%>
  <span class="cerrar" onclick="$('#notice').hide();">X</span>
</div>

<p>
  <strong>Avatar:</strong><br>

  <%puts "*****"+@profile.ruta_photo%>
  <%= image_tag @profile.ruta_photo, class: "avatar"%>
</p>
<p>
  <strong>Cedula:</strong>
  <%= @profile.cedula_format %>
</p>

<p>
  <strong>Nombres:</strong>
  <%= @profile.primer_nombre %> <%= @profile.segundo_nombre %> 
</p>

<p>
  <strong>Apellidos:</strong>
  <%= @profile.primer_apellido %> <%= @profile.segundo_apellido %> 
</p>

<p>
  <strong>Email:</strong>
  <%= @profile.email %>
</p>

<p>
  <strong>Telefono:</strong>
  <%= @profile.telefono_format %>
</p>

<p>
  <strong>Fecha de nacimiento:</strong>
  <%= @profile.mask_date(@profile.fecha_nac.to_s) %>
</p>
<p>
  <strong>Quinta:</strong>
  <%= @profile.family.nombre_casa %> - Nro <%= @profile.family.numero_casa_format %>
</p>
<p>
  <strong>Fecha de ingreso:</strong>
  <%= @profile.mask_date(@profile.fecha_ing.to_s) %>
</p>

  <button type="button" class="btn btn-danger" aria-label="Left Align" onclick="window.location.href='<%=profiles_path%>'">
      <span class="glyphicon glyphicon-chevron-left" aria-hidden="true" ></span>
      Regresar &nbsp;
    </button>
<% if session[:type_user]!="SimpleUser"%>
    <button type="button" class="btn btn-primary" aria-label="Left Align" onclick="window.location.href='<%=edit_profile_path(@profile)%>'">
      <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
      Editar &nbsp;
    </button>
<%end%>

