<div id="formInicio">
<h1 >Inicio de Sesión</h1>		

<%= form_tag usuario_sessions_path,class: "content-center", method: :post do %>
<div id="notice" class="alert alert-success hidden" role="alert">
  <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
  <span class="sr-only"></span>
  <span class="cerrar" onclick="$('#notice').hide();">X</span>
  <%=notice%>
</div>
<div id="error" class="alert alert-danger hidden" role="alert">
  <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
  <span class="sr-only">Error:</span>
  <span class="cerrar" onclick="$('#error').hide();">X</span>
  <%=alert%>
</div>
	<div class="field">
		<%= label_tag :cedula %><br/>
		<%= text_field_tag  :cedula,"", type:"number" %>		
	</div> 
	<div class="field">
		<%= label_tag :password %><br/>
		<%= password_field_tag :password %>		
	</div> 
	<div class="actions">
		<%= submit_tag "Iniciar Sesion", class: "btn btn-primary"%>
	</div>
	<a href='#' onclick="recuperarPass();">Olvide mi contraseña</a>
<% end %>

</div>
<div id="recuperarContainer">
	
</div>